<Window
    x:Class="PasswordKeeper.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswordKeeper.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PasswordKeeper"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Button Content="Пароли" x:Name="PasswordButton" Click="PasswordButton_Click" Margin="5 5 0 5" Width="150" Height="50" FontSize="20"/>
                <Button Content="Ссылки" x:Name="LinksButton" Click="LinksButton_Click" Margin="5 5 0 5" Width="150" Height="50" FontSize="20"/>
                <Button Content="Записи" x:Name="NoteButton" Click="NoteButton_Click" Margin="5 5 0 5" Width="150" Height="50" FontSize="20"/>
            </StackPanel>
            <Frame x:Name="Main" NavigationUIVisibility="Hidden" Navigated="Main_Navigated"/>
        </StackPanel>
    </Grid>
</Window>
